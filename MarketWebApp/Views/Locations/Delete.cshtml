@model MarketWebApp.Models.Entity.Location

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

    <center>
        <div class="align-content-center">
            <div class="container">
                <div class="card" style="width: 20rem;">
                    <img src="~/1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <form asp-action="ConfirmDelete">
                            <input type="hidden" name="Id" value="@Model.ID"><hr>
                            <h2> Are you want to delete this Location (@Model.Name) </h2>
                            <br />
                            <div class="d-inline-flex gap-1">
                                <input type="submit" value="Delete" class="btn btn-danger btn-lg" style="margin-block" />
                                <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Locations"> Cancel </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </center>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
