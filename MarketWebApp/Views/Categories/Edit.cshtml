@model MarketWebApp.ViewModel.EditCategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Edit Category</h1>
            </div>

            <div class="modal-body p-5 pt-0">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="ID" class="form-control" />
                    </div>
                    <label asp-for="Name" class="control-label"></label>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <label class="control-label" for="inputGroupFile02">Category Image</label>
                    <div class="row mb-4">
                        <div class="col-2">
                            <div class="form-outline">
                                <img src="~/CategoryImages/@Model.Image" class="rounded-4" height="40" width="40" />
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="form-outline">
                                <input asp-for="CategoryImage" value="@Model.Image" class="form-control">
                                <span asp-validation-for="CategoryImage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <input type="submit" value="Edit" class="btn btn-primary rounded-3" />
                        <a class="btn btn-outline-secondary rounded-3" asp-action="Index"> Cancel </a>
                    </div><br />
                    <small class="text-body-secondary">Using the Edit page, you can Edit any Categories.</small>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
