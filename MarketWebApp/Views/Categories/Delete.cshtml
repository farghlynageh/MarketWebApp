@model MarketWebApp.Models.Entity.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   // Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.flag)
{

    <center>
        <div class="align-content-center">
            <div class="container">
                <div class="card-cant" style="width: 30rem;">
                    <img src="~/CantDelete.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <form asp-action="ConfirmDelete">
                            <input type="hidden" name="Id" value="@Model.ID"><hr>
                            <h2> You Can't Delete (@Model.Name) Because It Contain (@Model.Products.Count) Product </h2>
                            <br />
                            <a class="btn btn-outline-success rounded-3" asp-action="Index"> Back To All Departments </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </center>
}
else
{
    <center>
        <div class="align-content-center">
            <div class="container">
                <div class="card" style="width: 30rem;">
                    <img src="~/1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <form asp-action="ConfirmDelete">
                            <input type="hidden" name="Id" value="@Model.ID"><hr>
                            <h2> Are you want to delete this Department (@Model.Name) </h2>
                            <br />
                            <div class="d-inline-flex gap-1">
                                <input type="submit" value="Delete" class="btn btn-danger btn-lg" style="margin-block"/>
                                <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Categories"> Cancel </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </center>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
