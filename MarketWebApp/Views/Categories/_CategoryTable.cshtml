@model IEnumerable<MarketWebApp.Models.Entity.Category>
<table class="table table table-hover table-striped">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="~/CategoryImages/@item.Img" class="rounded-circle" height="40" width="40" />
                </td>

                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">
                        <i class="bi bi-pen"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ID">
                        <i class="bi bi-trash3-fill"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>