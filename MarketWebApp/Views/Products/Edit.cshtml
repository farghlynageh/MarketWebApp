@model MarketWebApp.ViewModel.Product.EditProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container ">
<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Edit Product</h1>
            </div>
            <div class="modal-body p-5 pt-0">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="ID" class="form-control" />
                        </div>

                    <label asp-for="Name" class="control-label"></label>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <label asp-for="Price" class="control-label"></label>
                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <label asp-for="Discount" class="control-label"></label>
                    <div class="form-floating mb-3">
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <label class="control-label" for="inputGroupFile02">Product Image</label>
                    <div class="row mb-4">
                        <div class="col-2">
                            <div class="form-outline">
                                <img src="~/ProductImages/@Model.Img" class="rounded-4" height="40" width="40" />
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="form-outline">
                                <input asp-for="ProductImage" value="@Model.Img" class="form-control">
                                <span asp-validation-for="ProductImage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <label asp-for="Stock" class="control-label"></label>
                    <div class="form-floating mb-3">
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                        <label asp-for="CategoryID" class="control-label"></label>
                        <div class="form-outline mb-4">
                            <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>

                        <label asp-for="SupplierId" class="control-label"></label>
                        <div class="form-outline mb-4">
                            <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>
                    <div class="d-grid gap-2">
                        <input type="submit" value="Edit" class="btn btn-primary rounded-3" />
                        <a class="btn btn-outline-secondary rounded-3" asp-action="Index"> Cancel </a>
                    </div><br />
                    <small class="text-body-secondary">Using the Edit page, you can Edit any Product.</small>
                    </form>
                </div>
            </div>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
